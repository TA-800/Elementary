<UserControl x:Class="Elementary.MVVM.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Elementary.MVVM.Views"
             xmlns:viewModels="clr-namespace:Elementary.MVVM.ViewModels"
             xmlns:models="clr-namespace:Elementary.MVVM.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- DataContext = HomeViewModel -->
    <UserControl.DataContext>
        <viewModels:HomeViewModel />
    </UserControl.DataContext>

    <Border Background="Yellow">
        <StackPanel>
        <TextBlock Text="Home"
                   FontSize="48" />

            <ItemsControl ItemsSource="{Binding Users}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Background="Gold">
                            <TextBlock Foreground="White" Text="{Binding name}" />
                            <TextBlock Foreground="White" Text="{Binding id}" />
                            <TextBlock Foreground="White" Text="{Binding email}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel> 
    </Border>
</UserControl>
