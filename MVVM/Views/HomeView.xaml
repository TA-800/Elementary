<UserControl x:Class="Elementary.MVVM.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:Elementary.MVVM.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <!-- DataContext = HomeViewModel -->
    <UserControl.DataContext>
        <viewModels:HomeViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Border Background="{StaticResource PrimaryLight3Brush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40*" />
                <RowDefinition Height="60*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70*" />
                <ColumnDefinition Width="60*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>

            <!-- Main View -->
            <StackPanel Grid.Row="0"
                        Grid.RowSpan="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="3">
                <TextBlock Text="Knowledge"
                           Margin="10"
                           FontSize="48" />
                <ListView ItemsSource="{Binding Elements}"
                          SelectedItem="{Binding SelectedElement}"
                          Height="365"
                          SelectionMode="Single"
                          Background="Transparent"
                          BorderThickness="0"
                          ItemContainerStyle="{StaticResource ElementItemContainer}"
                          d:ItemsSource="{d:SampleData ItemCount=5}" />
            </StackPanel>

            <!-- Info box on bottom right -->
            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Content="{Binding SelectedElement}">
                <ContentControl.ContentTemplate>
                    <DataTemplate>

                        <!-- Wrapper -->

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <Border Background="{StaticResource PrimaryDark5Brush}"
                                    BorderBrush="#40000000"
                                    BorderThickness="2"
                                    CornerRadius="4">
                                <StackPanel>

                                    <!-- Header -->
                                    <Border Background="{StaticResource PrimaryDark4Brush}"
                                            CornerRadius="4"
                                            Margin="5"
                                            Padding="2.5">
                                        <DockPanel>
                                            <TextBlock Text="{Binding Number}"
                                                       VerticalAlignment="Center"
                                                       DockPanel.Dock="Left"
                                                       Margin="5" />
                                            <TextBlock Text="{Binding Name}"
                                                       VerticalAlignment="Center"
                                                       Margin="5" />
                                            <TextBlock Text="{Binding Symbol}"
                                                       VerticalAlignment="Bottom"
                                                       HorizontalAlignment="Right"
                                                       FontWeight="Black"
                                                       FontSize="22"
                                                       Margin="5" />
                                        </DockPanel>
                                    </Border>

                                    <!-- Information -->
                                    <Border>
                                        <StackPanel Margin="10">
                                            <TextBlock Text="Information"
                                                       FontWeight="Bold" />
                                            <Border>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>

                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="28*" />
                                                        <ColumnDefinition Width="72*" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Text="Mass"
                                                               Style="{StaticResource ElementTableInfoHeader}" />
                                                    <TextBlock Text="Period"
                                                               Style="{StaticResource ElementTableInfoHeader}"
                                                               Grid.Row="1" />
                                                    <TextBlock Text="Group"
                                                               Style="{StaticResource ElementTableInfoHeader}"
                                                               Grid.Row="2" />
                                                    <TextBlock Text="Block"
                                                               Style="{StaticResource ElementTableInfoHeader}"
                                                               Grid.Row="3" />
                                                    <TextBlock Text="Configuration"
                                                               Style="{StaticResource ElementTableInfoHeader}"
                                                               FontWeight="Light"
                                                               FontSize="10"
                                                               Grid.Row="4" />

                                                    <TextBlock Text="{Binding Atomic_Mass}"
                                                               Style="{StaticResource ElementTableInfoData}"
                                                               Grid.Column="1" />
                                                    <TextBlock Text="{Binding Period}"
                                                               Style="{StaticResource ElementTableInfoData}"
                                                               Grid.Row="1"
                                                               Grid.Column="1" />
                                                    <TextBlock Text="{Binding Group}"
                                                               Style="{StaticResource ElementTableInfoData}"
                                                               Grid.Row="2"
                                                               Grid.Column="1" />
                                                    <TextBlock Text="{Binding Block}"
                                                               Style="{StaticResource ElementTableInfoData}"
                                                               Grid.Row="3"
                                                               Grid.Column="1" />
                                                    <TextBlock Text="{Binding Electron_Configuration}"
                                                               Style="{StaticResource ElementTableInfoData}"
                                                               Grid.Row="4"
                                                               Grid.Column="1" />

                                                    <TextBlock Text="{Binding Summary}"
                                                               TextWrapping="Wrap"
                                                               Grid.Row="5"
                                                               Grid.ColumnSpan="2" />

                                                </Grid>
                                            </Border>
                                        </StackPanel>
                                    </Border>

                                </StackPanel>
                            </Border>
                        </ScrollViewer>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>

        </Grid>
    </Border>
</UserControl>
