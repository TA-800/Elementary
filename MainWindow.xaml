<Window x:Class="Elementary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elementary"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>

        <!-- Apply this style to all textblocks -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#cbd5e1"/>
        </Style>

        <!-- Button Template for Close and Minimize -->
        <Style TargetType="Button" x:Key="windowActionButtonTemplate">
            <Setter Property="Background" Value="Transparent"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Width="30">
                            <TextBlock Text="{TemplateBinding Content}" Foreground="#cbd5e1" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Red"/>
                </Trigger>
            </Style.Triggers>
            
        </Style>
    </Window.Resources>
    
    
    <Border Background="#0f172a" BorderBrush="#020617" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition />
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <Rectangle x:Name="TopDragBar" Fill="#020617" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" MouseLeftButtonDown="TopDragBar_MouseLeftButtonDown"/>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Elementary" Margin="10,0,0,2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2" >
                <Button x:Name="MinimizeWindow" Content="🗖"
                                             Style="{StaticResource windowActionButtonTemplate}" Click="MinimizeWindow_Click" />
                <Button x:Name="CloseWindow" Content="✖"
                                             Style="{StaticResource windowActionButtonTemplate}" Click="CloseWindow_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
